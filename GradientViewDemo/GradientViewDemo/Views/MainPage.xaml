<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:GradientViewDemo.Views"
             xmlns:local="clr-namespace:GradientViewDemo.Views"
            x:Class="GradientViewDemo.Views.MainPage">
    <TabbedPage.Children>
        <NavigationPage Title="Linear Gradient">
            <x:Arguments>
                <views:LinearGradient/>
            </x:Arguments>
        </NavigationPage>
        
        <NavigationPage Title="Radial Gradient">
            <x:Arguments>
                <views:RadialGradient/>
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>